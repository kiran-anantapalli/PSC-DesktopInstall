<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:utilities="clr-namespace:PSCInstaller.Utilities">

     
    <!-- Values (Dynamic Resources)-->
    <Thickness x:Key="CommonMargin">10</Thickness>
    <sys:Double x:Key="TitleFontSize">30</sys:Double>
    <sys:Double x:Key="CommonFontSize1">26</sys:Double>
    <sys:Double x:Key="CommonFontSize">20</sys:Double>
    <sys:Double x:Key="CommonFontSizeS">18</sys:Double>
    <sys:Double x:Key="SubjectFontSize">16</sys:Double>
    <sys:Double x:Key="ListFontSize">14</sys:Double>

    <!-- Fonts -->
    <FontFamily x:Key="CommonFontFamily">Gill Sans MT</FontFamily>

    <!-- Colors -->
    <Color x:Key="PearsonGray">#e2dfdf</Color>
    <Color x:Key="PearsonWhite">#FFFFFF</Color>
    <Color x:Key="PearsonDarkGray">#FF6C6C6C</Color>
    <Color x:Key="PearsonBlue" >#334993</Color>
    <Color x:Key="PearsonTeal" >#198098</Color>
    <Color x:Key="PearsonDarkTeal">#FF14687C</Color>
    <Color x:Key="PearsonLightGray">#FFF4F4F4</Color>    
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="MainThemeBackgroundBorderBrush" Color="{StaticResource PearsonDarkTeal}" />
    <SolidColorBrush x:Key="MainThemeBackgroundBrush" Color="{StaticResource PearsonTeal}" />
    <SolidColorBrush x:Key="PearsonBlueBrush" Color="{StaticResource PearsonBlue}" />
    <SolidColorBrush x:Key="PearsonGrayBrush" Color="{StaticResource PearsonGray}" />
    <SolidColorBrush x:Key="PearsonWhiteBrush" Color="{StaticResource PearsonWhite}" />
    <SolidColorBrush x:Key="PearsonDarkGrayBrush" Color="{StaticResource PearsonDarkGray}" />
    <SolidColorBrush x:Key="PearsonLightGrayBrush" Color="{StaticResource PearsonLightGray}" />

    <!-- Start view button brushes-->
    <SolidColorBrush x:Key="GreenForeground" Color="#FF079414" />
    <SolidColorBrush x:Key="GreenBackground" Color="#FFE3F6E3" />
    <SolidColorBrush x:Key="GreenBorder" Color="#FF4C843F" />
    <SolidColorBrush x:Key="RedForeground" Color="#FFC90531" />
    <SolidColorBrush x:Key="RedBackground" Color="#FFEFE1E1" />
    <SolidColorBrush x:Key="RedBorder" Color="#FFB73738" />

    <SolidColorBrush x:Key="BlueBackground" Color="#8CBFCB" />
    <SolidColorBrush x:Key="PageBackground" Color="#FFE4E4E4" />
    <SolidColorBrush x:Key="TextForeground" Color="{StaticResource PearsonDarkGray}" />
    <SolidColorBrush x:Key="HighlightButtonBrush" Color="#FFC4EFF6" />

    <LinearGradientBrush x:Key="StartButtonBackgroundBrush" StartPoint="0 0" EndPoint="0 1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{StaticResource PearsonWhite}"/>
            <GradientStop Offset="1" Color="{StaticResource PearsonGray}"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
    <Style TargetType="{x:Type Border}" x:Key="PageBaseStyle">
        <Setter Property="Background" Value="{StaticResource PearsonWhiteBrush}"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style x:Key="TopBarTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource CommonFontFamily}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource PearsonDarkGrayBrush}"/>
    </Style>

    <Style x:Key="TopBarHeaderTextStyle" TargetType="{x:Type TextBlock}" 
           BasedOn="{StaticResource TopBarTextStyle}">
        <Setter Property="FontSize" Value="{StaticResource CommonFontSize1}"/>
    </Style>
    <Style x:Key="TopBarSubheadingTextStyle" TargetType="{x:Type TextBlock}" 
           BasedOn="{StaticResource TopBarTextStyle}">
        <Setter Property="FontSize" Value="{StaticResource CommonFontSizeS}"/>
    </Style>
    <!-- Images -->
    <Style x:Key="PearsonControlControlStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Height="50" Width="50">
                        <Rectangle Fill="{StaticResource MainThemeBackgroundBrush}"></Rectangle>
                        <Image HorizontalAlignment="Center" Stretch="UniformToFill" Source="/PSCInstaller;component/Assets/Images/Logo.scale-100.png"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Text -->
    <Style TargetType="{x:Type TextBlock}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource CommonFontFamily}"/>
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="Title" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="Heading1" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="{DynamicResource CommonFontSizeS}"/>
        <Setter Property="Foreground" Value="{StaticResource TextForeground}"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="Heading2" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="{DynamicResource CommonFontSizeS}"/>
        <Setter Property="Foreground" Value="{StaticResource TextForeground}"/>
    </Style>  
    <Style TargetType="{x:Type TextBlock}" x:Key="ContentText" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="{DynamicResource SubjectFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource PearsonGrayBrush}"/>
    </Style>

