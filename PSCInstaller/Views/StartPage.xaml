<Page x:Class="PSCInstaller.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vms="clr-namespace:PSCInstaller.ViewModels" 
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      d:DataContext="{d:DesignInstance vms:StartViewModel, d:IsDesignTimeCreatable=True}"
      Title="Start">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Viewbox Margin="60" VerticalAlignment="Center">
            <Path Fill="White" Data="{StaticResource PearsonLogoGeometry}"/>
        </Viewbox>
       
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Vertical">
            <Button x:Name="InstallButton" Grid.Column="0" Width="250" Height="80" 
                        Style="{StaticResource NavigationButtonStyle}"
                        Command="{Binding NavigateToInstallationCommand}">Install</Button>

            <Button  x:Name="UninstallButton" Grid.Column="1" Width="250" Height="80" 
                        Style="{StaticResource NavigationButtonStyle}" 
                        Command="{Binding NavigateToUnInstallCommand}">Uninstall</Button>
        </StackPanel>
    </Grid>
</Page>
